#  ▌      ▗     
# ▛▌▌▌▛▌▛▘▜▘▛▘▛▘
# ▙▌▙▌▌▌▄▌▐▖▌ ▙▖
# See dunst(5) for all configuration options               

[global]
    ### Display ###

    # Display notifications on monitor 0 by default
    monitor = 0

    # Follow keyboard focus to determine the focused monitor (overrides monitor option)
    follow = keyboard

    ### Geometry ###

    # Notification width
    width = 300

    # Max height of single notification, excluding frame
    height = 300

    # Position notifications in the bottom right corner
    origin = bottom-right

    # Offset from the origin
    offset = 10x10

    # Autodetect scale factor
    scale = 0

    # Maximum number of notifications
    notification_limit = 20

    ### Progress bar ###

    # Enable the progress bar. It appears when a progress hint is passed with
    # for example `dunstify -h int:value 12`
    progress_bar = true

    # Set the progress bar height (includes frame)
    progress_bar_height = 10

    # Set the frame width of the progress bar
    progress_bar_frame_width = 1

    # Set the minimum width for the progress bar
    progress_bar_min_width = 150

    # Set the maximum width for the progress bar
    progress_bar_max_width = 300

    # Disable round corners for the progress bar
    progress_bar_corner_radius = 0

    # Disable corner radius for the icon image
    icon_corner_radius = 0

    # Show how many messages are currently hidden due to notification_limit
    indicate_hidden = yes

    # Separate two notifications by 2 pixels
    gap_size = 4

    # Vertical padding
    padding = 8

    # Horizontal padding
    horizontal_padding = 8

    # Padding between text and icon
    text_icon_padding = 0

    # Frame width
    frame_width = 1

    # Frame colour
    frame_color = "#AAAAAA"

    # Sort notifications
    sort = yes

    ### Text ###

    font = AnonymicePro Nerd Font 10

    # Allow a small subset of html markup in notifications
    # see https://docs.gtk.org/Pango/pango_markup.html
    markup = full

    # The format of the message. Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  literal %
    # Markup is allowed
    format = "<b>%s</b>\n%b"

    # Alignment of message text
    alignment = left

    # Ellipsize long lines in the middle
    ellipsize = middle

    # Don't ignore newlines in notifications
    ignore_newline = no

    # Stack together notifications with the same content
    stack_duplicates = true

    # Don't hide the duplicate count
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A)
    show_indicators = yes

    # Recursive icon lookup
    enable_recursive_icon_lookup = true

    # Align icons left
    icon_theme = gruvbox-dark-icons-gtk

    # Small icons scale up to this size
    min_icon_size = 32

    # Scale larger icons down to this size
    max_icon_size = 128

    ### History ###

    # Notifications popped up from history should be sticky
    sticky_history = yes

    # Maximum amount of notifications kept in history
    history_length = 20

